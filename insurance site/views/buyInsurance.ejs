<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Buy Insurance</title>

        <!-- BOOTSTARP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
         integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

        <link rel="stylesheet" href="CSS/buyinsurance.css">
    </head>
    <body>
        <!-- NAVBAR -->
            <div class="navigation-bar" >

            <span class="nav-title" >Buy Insurance</span>
            <span class="nav-items"><a href="/">Home</a></span>
            <span class="nav-items"><a href="buyinsurance">Buy Insurance</a></span>

            <span class="nav-items"><a href="contactus">Contact us </a></span>

            <span class="nav-buttons">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-danger" href="/logout" role="button">Log out</a>

            </div>
            </span>

            </div>


            <!-- //form -->
        <form class="" action="/buyinsurance" method="post">

            <div class="card" style="width: 18rem;">

          <div class="card-body">
            <h5 class="card-title">Insurance</h5>

          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <label for="insurance">Select type of insurance : </label>
                <select class="" name="insurance" id="insurance">
                    <option value="Car">Car</option>
                    <option value="Health">Health</option>
                    <option value="Bike">Bike</option>
                    <option value="Life">Life</option>
                    <option value="Travel">Travel</option>
                </select>
            </li>
            <li class="list-group-item">
                <label for="year">Select duration : </label>
                <select class="" name="year" id="year">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                </select>
            </li>
            <li class="list-group-item">
                <label for="amount">Enter insurance amount : </label>
                <input type="number" name="amount" id="amount" value="" placeholder="Min Rs. 10,000 " required>

            </li>
          </ul>
          <div class="card-body">
                <button class="btn btn-lg btn-primary btn-block" name="button" onclick="checkAmount()" type="submit">Buy</button>
          </div>
        </div>

        </form>

        <script type="text/javascript">
        function  checkAmount(){
                var amount=document.getElementById('amount').value;
                amount_int=parseInt(amount);
                console.log(amount_int);
                if (amount_int<10000){
                    document.getElementById('amount').value="";
                    alert("Minimun insurance amount of Rs. 10,000.")
                }
            }

        </script>
    </body>
</html>
